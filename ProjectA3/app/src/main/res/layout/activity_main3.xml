<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.cambrian.android.project.aaa.Detail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toronto"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="24dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:id="@+id/Captioooon"
        />

    <ImageView
        android:layout_width="366dp"
        android:layout_height="218dp"
        app:srcCompat="@drawable/toronto"
        android:id="@+id/imageView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Captioooon"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:layout_width="352dp"
        android:layout_height="134dp"
        android:text="@string/toronto_desciption"
        android:id="@+id/description"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:text="@string/buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buy_btn"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="272dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <Button
        android:text="@string/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_btn"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.36" />

</android.support.constraint.ConstraintLayout>
